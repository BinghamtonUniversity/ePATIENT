{{#scenario}}

{{#if !(hashParams.id )}}

<h3><a href="#page=problems"><i class="fa fa-stethoscope text-muted"></i> Problems</a></h3>
<hr>
<a href="#page=form&form=problems" class="btn btn-success pull-right"><i class="fa fa-plus"></i> Add</a>
<span style="width:200px;float:right;margin-right:20px">{{>filter}}</span><br><br>
<table class="table table-bordered table-striped table-hover table-fixed sortable">
    <thead>
        <tr>
            <th>Priority</th>
            <th>Status</th>
            <th>Description</th>
            <th>Date of Onset</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#problems.problem}}
        <tr class="filterable" data-href="#page=problems&form=problems&id={{ @index }}">
            <td>{{priority}}</td>
            <td>{{status}}</td>
            <td>{{problem}}</td>
            <td>{{ customRender(onset) }}</td>
            <td>
                <a href="#page=form&form=problems&id={{ @index }}" class="btn btn-info btn-xs"><i class="fa fa-edit"></i> Edit</a>
                {{#admin}}<div data-action="delete" data-id="{{ @index }}" class="btn btn-danger btn-xs"><i class="fa fa-times"></i> Delete</div>{{/admin}}
            </td>
        </tr>
        {{/problems.problem}}
    </tbody>
</table>
{{else}}
    <div class="btn-group pull-right btn-group-lg" style="margin-top:-10px" role="group">

        {{#if hashParams.id>0}}<a href="#page=problems&form=problems&id={{ hashParams.id -1 }}" class="btn btn-default btn-lg" title="Previous"><i class="fa fa-chevron-left"></i><div style="font-size:12px">Previous</div></a>{{/if}}
        <a href="#page=form&form=problems&id={{ hashParams.id}}" class="btn btn-info btn-lg" title="Edit"><i class="fa fa-edit"></i><div style="font-size:12px">Edit</div></a>
        {{#if hashParams.id<(problems.problem.length-1)}}<a href="#page=problems&form=problems&id={{ parseInt(hashParams.id) +1 }}" class="btn-lg btn btn-default" title="Next"><i class="fa fa-chevron-right"></i><div style="font-size:12px">Next</div></a>{{/if}}

    </div>

<h3><a href="#page=problems"><i class="fa fa-stethoscope text-muted"></i> Problem</a></h3>
<hr>
<div class="flow-container">
    <div id="form" class="view well"> </div>

</div>
{{/if}}
{{/scenario}}
